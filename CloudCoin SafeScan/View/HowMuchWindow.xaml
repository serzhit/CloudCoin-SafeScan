<Window x:Class="CloudCoin_SafeScan.HowMuchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CloudCoin_SafeScan"
        mc:Ignorable="d"
        Title="Enter Sum to Give Away" Height="280" Width="300">
    <Grid Margin="0,0,0,4">
        <Label x:Name="label" Content="Enter Sum you want to give away. App &#xD;&#xA;will form file with stack of coins with &#xD;&#xA;nearest possible value." HorizontalAlignment="Left" Height="71" Margin="10,10,0,0" VerticalAlignment="Top" Width="272" FontSize="14"/>
        <TextBox x:Name="enterSumBox" HorizontalAlignment="Center" Height="73" Margin="56,86,56,0" VerticalAlignment="Top" Width="180" FontSize="36" TextAlignment="Center" MaxLines="1"/>
        <Button x:Name="OKbutton" Content="OK" HorizontalAlignment="Left" Height="34" Margin="94,184,0,0" VerticalAlignment="Top" Width="109" Click="onOKClicked" IsDefault="True"/>
    </Grid>
</Window>
