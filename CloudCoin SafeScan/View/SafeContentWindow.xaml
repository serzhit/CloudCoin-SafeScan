<Window x:Name="Safe_Contents" x:Class="CloudCoin_SafeScan.SafeContentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CloudCoin_SafeScan"
        mc:Ignorable="d"
        Title="Safe Content" Height="380.769" Width="380.838" ResizeMode="NoResize">
    <Grid Height="246" VerticalAlignment="Top" DataContext="{Binding SafeContent, Source={StaticResource Locator}}" >
        <ListView x:Name="SafeView" HorizontalAlignment="Center" Margin="10,67,12,10" Width="353" ItemsSource="{Binding Rows}">
            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <GridView.ColumnHeaderContextMenu>
                        <ContextMenu HorizontalAlignment="Center" HorizontalContentAlignment="Center"/>
                    </GridView.ColumnHeaderContextMenu>
                    <GridViewColumn Header="Value" DisplayMemberBinding="{Binding Value}" Width="80"/>
                    <GridViewColumn Header="Good" DisplayMemberBinding="{Binding Good}" Width="100"/>
                    <GridViewColumn Header="Fractioned" DisplayMemberBinding="{Binding Fractioned}" Width="100"/>
                    <GridViewColumn Header="Total" DisplayMemberBinding="{Binding Total}" Width="70"/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox x:Name="totalTextBox" HorizontalAlignment="Left" Height="52" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding StatusText}" VerticalAlignment="Top" Width="353" FontSize="32" BorderThickness="0"/>
        <Button x:Name="FixButton" Content="Fix Fractioned" HorizontalAlignment="Left" Height="35" Margin="34,288,0,-77" VerticalAlignment="Top" Width="124" Click="onFixButton"/>
        <Button x:Name="CloseButton" Content="Close" HorizontalAlignment="Left" Height="35" Margin="216,288,0,-77" VerticalAlignment="Top" Width="124" Click="onCloseButton" IsCancel="True"/>
    </Grid>
</Window>
