<Window x:Class="CloudCoin_SafeScan.WithdrawDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CloudCoin_SafeScan"
        mc:Ignorable="d"
        Title="Enter Sum to Give Away" Height="322" Width="300">
    <Grid Margin="0,0,0,4" DataContext="{Binding Withdraw, Source={StaticResource Locator}}">
        <TextBlock x:Name="Text" Text="Enter Sum you want to withdraw. App &#xA;will form file with stack of coins with &#xA;nearest possible value." Height="71" Margin="0,69,0,0" VerticalAlignment="Top" Width="272" FontSize="14" TextAlignment="Justify"/>
        <TextBox x:Name="enterSumBox" HorizontalAlignment="Center" Height="73" Margin="0,145,0,0" VerticalAlignment="Top" Width="180" FontSize="36" TextAlignment="Center" MaxLines="1"/>
        <Button x:Name="OKbutton" Content="OK" HorizontalAlignment="Center" Height="34" Margin="0,231,0,0" VerticalAlignment="Top" Width="109" Click="onOKClicked" IsDefault="True"/>
        <Label x:Name="SumInStack" Content="{Binding SumInSafe}" HorizontalAlignment="Left" Height="54" Margin="56,10,0,0" VerticalAlignment="Top" Width="79" FontWeight="Bold" FontSize="18"/>
        <Label x:Name="label2" Content="CC in your Safe" HorizontalAlignment="Left" Height="54" Margin="140,10,0,0" VerticalAlignment="Top" Width="142" FontWeight="Bold" FontSize="18"/>
    </Grid>
</Window>
