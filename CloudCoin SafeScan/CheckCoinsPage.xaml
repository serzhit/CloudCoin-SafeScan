<Page x:Class="CloudCoin_SafeScan.CheckCoinsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CloudCoin_SafeScan"
      mc:Ignorable="d" 
      d:DesignHeight="325" d:DesignWidth="525"
      Title="CloudCoin Scan&amp;Safe - CheckCoins">

    <Grid Background="White">
        <Image x:Name="Checking_Gold" HorizontalAlignment="Left" Height="180" Margin="10,10,0,0" VerticalAlignment="Top" Width="190" Source="Resources/tasty_gold_2307.png"/>
        <ProgressBar Margin="220,85,25,220"/>
        <TextBox x:Name="CheckLoadPercent" HorizontalAlignment="Left" Height="40" Margin="340,125,0,0" TextWrapping="Wrap" Text="100%" VerticalAlignment="Top" Width="65" TextChanged="textBox_TextChanged" FontSize="24"/>
        <Viewbox x:Name="RAIDA_Check_Log" HorizontalAlignment="Left" Height="120" VerticalAlignment="Top" Width="505" Margin="10,195,0,0"/>
        <Label x:Name="CheckingCoins" Content="Checking your CloudCoins&#xD;&#xA;" HorizontalAlignment="Left" Height="40" Margin="255,30,0,0" VerticalAlignment="Top" Width="225" FontSize="18"/>
    </Grid>
</Page>
