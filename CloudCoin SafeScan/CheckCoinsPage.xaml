      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CloudCoin_SafeScan"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="525"
      Title="CloudCoin Scan&amp;Safe - CheckCoins" Width="525" Height="350" Background="White">
    <Window.Resources>
        <ControlTemplate x:Key="DataGridControlTemplate1" TargetType="{x:Type DataGrid}"/>
    </Window.Resources>

    <Grid Background="White">
        <ProgressBar Minimum="0" Maximum="100" x:Name="CheckProgress" Margin="235,10,10,289"/>
        <Image x:Name="CoinImage" HorizontalAlignment="Left" Height="129" Margin="47,53,0,0" VerticalAlignment="Top" Width="130">
            <Image.Effect>
                <DropShadowEffect/>
            </Image.Effect>
        </Image>
        <Label x:Name="LabelStatus" Content="OK!" HorizontalAlignment="Left" Height="95" Margin="365,70,0,0" VerticalAlignment="Top" Width="122" FontSize="48" Foreground="#FF00C800" Visibility="Hidden"/>
        <TextBlock x:Name="Filename" HorizontalAlignment="Left" Height="43" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" ScrollViewer.VerticalScrollBarVisibility="Disabled" Text="Checking..."/>
        <TextBox x:Name="percentBox" HorizontalAlignment="Left" Height="20" Margin="361,10,0,0" TextWrapping="Wrap" Text="100%" VerticalAlignment="Top" Width="38" TextChanged="textBox_TextChanged" BorderThickness="0">
            <TextBox.Background>
                <SolidColorBrush Color="White" Opacity="0"/>
            </TextBox.Background>
        </TextBox>
        <Image x:Name="WorldMAp" HorizontalAlignment="Left" Height="154" Margin="254,35,0,0" VerticalAlignment="Top" Width="237" Source="Resources/world_map.png"/>
