<Window x:Class="CloudCoin_SafeScan.CheckCoinsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CloudCoin_SafeScan"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="525"
      Title="CloudCoin Scan&amp;Safe - CheckCoins" Width="525" Height="350" Background="White">

    <Grid Background="White">
        <Image x:Name="Checking_Gold" HorizontalAlignment="Left" Height="180" Margin="10,10,0,0" VerticalAlignment="Top" Width="190" Source="Resources/tasty_gold_2307.png"/>
        <ProgressBar Minimum="0" Maximum="100" x:Name="CheckProgress" Margin="235,55,10,214"/>
        <TextBox x:Name="CheckLoadPercent" HorizontalAlignment="Left" Height="40" Margin="355,120,0,0" TextWrapping="Wrap" Text="{Binding ElementName=CheckProgress, Path=Value, StringFormat={}{0:0}%}" VerticalAlignment="Top" Width="65" FontSize="24" BorderThickness="0"/>
        <Viewbox x:Name="RAIDA_Check_Log" HorizontalAlignment="Left" Height="114" VerticalAlignment="Top" Width="497" Margin="10,195,0,0"/>
        <Label x:Name="CheckingCoins" Content="Checking your CloudCoins&#xD;&#xA;" HorizontalAlignment="Left" Height="40" Margin="267,10,0,0" VerticalAlignment="Top" Width="225" FontSize="18"/>
    </Grid>
</Window>
